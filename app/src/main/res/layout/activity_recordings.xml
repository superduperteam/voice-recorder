<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--tools:context=".activities.RecordingsActivity"-->
    <!--android:orientation="vertical">-->

    <!--tools:context=".activities.RecordingsActivity"-->
    <!--android:orientation="vertical"-->

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/invisibleToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:visibility="invisible"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />



    <EditText
        android:id="@+id/search_by_bookmark"
        style="@style/Base.Widget.MaterialComponents.TextInputEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/invisibleToolbar"
        android:layout_marginEnd="-18dp"
        android:ems="10"
        android:hint="Search by bookmark name..."
        android:inputType="text" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recordingsLRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/search_by_bookmark"/>



</RelativeLayout>

